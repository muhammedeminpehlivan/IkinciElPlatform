@model List<IkinciElPlatform.Models.Product>

@{
    ViewData["Title"] = "Favorilerim";
}

<h2 class="mb-4">❤️ Favorilerim</h2>

@if (!Model.Any())
{
    <p>Henüz favorilere ürün eklemedin.</p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <a href="/Product/Detail/@item.Id" style="text-decoration:none;">
                    <div class="card p-2 shadow-sm border-0">

                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top mb-2" style="height:160px; object-fit:cover;" />
                        }

                        <h6 class="fw-bold">@item.Title</h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-success fw-bold">@item.Price ₺</span>
                            <span class="text-muted small">@item.Category?.Name</span>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
