@model IkinciElPlatform.Models.Product

<h2>Yeni Ürün Ekle</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <br />

    <div>
        <label>Ürün Fotoğrafı</label><br />
        <input type="file" name="imageFile" />
    </div>


    <div>
        <label>Ürün Adı</label><br />
        <input asp-for="Title" />
        <span asp-validation-for="Title" style="color:red"></span>
    </div>

    <br />

    <div>
        <label>Açıklama</label><br />
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description" style="color:red"></span>
    </div>

    <br />

    <div>
        <label>Fiyat</label><br />
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price" style="color:red"></span>
    </div>

    <br />

    <div>
        <label>Kategori</label><br />
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryList">
            <option value="">-- Kategori Seç --</option>
        </select>
        <span asp-validation-for="CategoryId" style="color:red"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-custom">İlanı Yayınla</button>


</form>

<br />
<a asp-action="Index">Ürün Listesine Dön</a>
