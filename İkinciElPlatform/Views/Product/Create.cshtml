@model IkinciElPlatform.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<h2 class="mb-3">➕ Yeni Ürün Ekle</h2>

<form asp-action="CreateProduct" method="post" enctype="multipart/form-data">

    <!-- 🔴 Genel hata özeti -->
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <!-- 📷 FOTO -->
    <div class="mb-3">
        <label class="form-label">Ürün Fotoğrafı</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <!-- 🏷 ÜRÜN ADI -->
    <div class="mb-3">
        <label class="form-label">Ürün Adı</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- 📝 AÇIKLAMA -->
    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- 💰 FİYAT -->
    <div class="mb-3">
        <label class="form-label">Fiyat (₺)</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <!-- 📂 KATEGORİ -->
    <div class="mb-3">
        <label class="form-label">Kategori</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
            <option value="">-- Kategori Seç --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <!-- 🏭 MARKA -->
    <div class="mb-3">
        <label class="form-label">Marka</label>
        <input asp-for="Brand" class="form-control" placeholder="Örn: Apple, Samsung" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <!-- 📦 DURUM -->
    <div class="mb-3">
        <label class="form-label">Ürün Durumu</label>
        <select asp-for="Condition" class="form-select">
            <option value="">-- Seçiniz --</option>
            <option>Sıfır</option>
            <option>Az Kullanılmış</option>
            <option>İyi</option>
        </select>
        <span asp-validation-for="Condition" class="text-danger"></span>
    </div>

    <!-- 📍 KONUM -->
    <div class="mb-3">
        <label class="form-label">Şehir</label>
        <input asp-for="Location" class="form-control" placeholder="Örn: İstanbul" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <!-- 🤝 PAZARLIK -->
    <div class="form-check mb-3">
        <input asp-for="IsNegotiable" class="form-check-input" />
        <label class="form-check-label">Pazarlık Var</label>
    </div>

    <!-- 🚀 GÖNDER -->
    <button type="submit" class="btn btn-success">
        İlanı Yayınla
    </button>

</form>

<br />

<a asp-action="MyProducts" class="btn btn-secondary">
    ← İlanlarıma Dön
</a>
