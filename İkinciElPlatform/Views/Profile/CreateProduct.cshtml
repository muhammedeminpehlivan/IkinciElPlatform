@model IkinciElPlatform.Models.Product

@{
    ViewData["Title"] = "Yeni İlan Ekle";
}

<style>
    body {
        background: #f4f6f8 !important;
    }

    .create-wrapper {
        max-width: 720px;
        margin: 50px auto 80px;
        padding: 0 12px;
    }

    .create-card {
        background: white;
        border-radius: 26px;
        padding: 35px 30px;
        box-shadow: 0 12px 30px rgba(15, 23, 42, 0.12);
    }

    .create-title {
        font-weight: 800;
        color: #0f172a;
        margin-bottom: 6px;
        text-align: center;
    }

    .create-subtitle {
        text-align: center;
        font-size: 14px;
        color: #64748b;
        margin-bottom: 30px;
    }

    .form-control,
    .form-select {
        border-radius: 12px;
        padding: 10px 12px;
        font-size: 14px;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 0.15rem rgba(99, 102, 241, 0.25);
        }

    .create-btn {
        width: 100%;
        margin-top: 20px;
        padding: 12px;
        border-radius: 30px;
        font-weight: 700;
        border: none;
        color: white;
        background: linear-gradient(135deg, #6366f1, #22d3ee);
        transition: 0.3s;
    }

        .create-btn:hover {
            filter: brightness(1.1);
            transform: scale(1.03);
        }

    .form-check-label {
        font-size: 14px;
        color: #0f172a;
    }
</style>

<div class="create-wrapper">

    <div class="create-card">

        <h2 class="create-title">➕ Yeni İlan Ekle</h2>
        <p class="create-subtitle">Ürününü ekle, hemen yayına al</p>

        <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">

            <input asp-for="Title" class="form-control mb-3" placeholder="Ürün Adı" />

            <textarea asp-for="Description" class="form-control mb-3" rows="3" placeholder="Ürün Açıklaması"></textarea>

            <input asp-for="Price" type="number" class="form-control mb-3" placeholder="Fiyat (₺)" />

            <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select mb-3"></select>

            <input asp-for="Brand" class="form-control mb-3" placeholder="Marka (Örn: Apple, Samsung)" />

            <select asp-for="Condition" class="form-select mb-3">
                <option value="">Ürünün Durumu</option>
                <option>Sıfır</option>
                <option>Az Kullanılmış</option>
                <option>İyi</option>
            </select>

            <input asp-for="Location" class="form-control mb-3" placeholder="Şehir (Örn: İstanbul)" />

            <div class="form-check mb-3">
                <input asp-for="IsNegotiable" class="form-check-input" type="checkbox" />
                <label class="form-check-label">
                    Pazarlık Var
                </label>
            </div>

            <input type="file" name="imageFile" class="form-control mb-3" />

            <button type="submit" class="create-btn">
                İlanı Yayınla
            </button>

        </form>

    </div>

</div>
