@model IkinciElPlatform.Models.Product

@{
    ViewData["Title"] = "Yeni İlan Ekle";
}

<style>
    body {
        background: #f4f6f8 !important;
    }

    .create-wrapper {
        max-width: 720px;
        margin: 50px auto 80px;
        padding: 0 12px;
    }

    .create-card {
        background: white;
        border-radius: 26px;
        padding: 35px 30px;
        box-shadow: 0 12px 30px rgba(15, 23, 42, 0.12);
    }

    .create-title {
        font-weight: 800;
        color: #0f172a;
        margin-bottom: 6px;
        text-align: center;
    }

    .create-subtitle {
        text-align: center;
        font-size: 14px;
        color: #64748b;
        margin-bottom: 30px;
    }

    .form-control, .form-select {
        border-radius: 12px;
        padding: 10px 12px;
        font-size: 14px;
    }

        .form-control:focus, .form-select:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 0.15rem rgba(99, 102, 241, 0.25);
        }

    .create-btn {
        width: 100%;
        margin-top: 20px;
        padding: 12px;
        border-radius: 30px;
        font-weight: 700;
        border: none;
        color: white;
        background: linear-gradient(135deg, #6366f1, #22d3ee);
        transition: 0.3s;
    }

        .create-btn:hover {
            filter: brightness(1.1);
            transform: scale(1.03);
        }

    .field-error {
        color: #ef4444;
        font-size: 13px;
        margin-top: 6px;
        display: block;
    }
</style>

<div class="create-wrapper">
    <div class="create-card">
        <h2 class="create-title">➕ Yeni İlan Ekle</h2>
        <p class="create-subtitle">Ürününü ekle, hemen yayına al</p>

        <!-- ✅ Hata Özeti -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <form asp-controller="Profile" asp-action="CreateProduct" method="post" enctype="multipart/form-data">

            <input asp-for="Title" class="form-control mb-1" placeholder="Ürün Adı" />
            <span asp-validation-for="Title" class="field-error"></span>

            <textarea asp-for="Description" class="form-control mb-1" rows="3" placeholder="Ürün Açıklaması"></textarea>
            <span asp-validation-for="Description" class="field-error"></span>

            <input asp-for="Price" type="number" step="0.01" class="form-control mb-1" placeholder="Fiyat (₺)" />
            <span asp-validation-for="Price" class="field-error"></span>

            <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select mb-1">
                <option value="">-- Kategori Seç --</option>
            </select>
            <span asp-validation-for="CategoryId" class="field-error"></span>

            <input asp-for="Brand" class="form-control mb-1" placeholder="Marka (Örn: Apple, Samsung)" />
            <span asp-validation-for="Brand" class="field-error"></span>

            <select asp-for="Condition" class="form-select mb-1">
                <option value="">Ürünün Durumu</option>
                <option value="Sıfır">Sıfır</option>
                <option value="Az Kullanılmış">Az Kullanılmış</option>
                <option value="İyi">İyi</option>
            </select>
            <span asp-validation-for="Condition" class="field-error"></span>

            <input asp-for="Location" class="form-control mb-1" placeholder="Şehir (Örn: İstanbul)" />
            <span asp-validation-for="Location" class="field-error"></span>

            <div class="form-check mb-3 mt-2">
                <input asp-for="IsNegotiable" class="form-check-input" type="checkbox" />
                <label class="form-check-label">Pazarlık Var</label>
            </div>

            <input type="file" name="imageFile" class="form-control mb-3" />

            <button type="submit" class="create-btn">İlanı Yayınla</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
