@{
    ViewData["Title"] = "Profilim";
}

<style>
    body {
        background: #f4f6f8 !important;
    }

    .profile-wrapper {
        max-width: 1000px;
        margin: 60px auto;
        padding: 30px;
    }

    .profile-header {
        background: linear-gradient(135deg, #6366f1, #22d3ee);
        padding: 40px;
        border-radius: 24px;
        color: white;
        text-align: center;
        box-shadow: 0 12px 25px rgba(0,0,0,0.15);
    }

        .profile-header h2 {
            font-weight: 800;
            margin-bottom: 8px;
        }

        .profile-header p {
            opacity: 0.95;
            font-size: 15px;
        }

    .profile-cards {
        margin-top: 45px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 30px;
    }

    .profile-card {
        background: white;
        border-radius: 22px;
        padding: 35px 25px;
        text-align: center;
        box-shadow: 0 10px 20px rgba(0,0,0,0.12);
        transition: 0.3s;
    }

        .profile-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 16px 34px rgba(0,0,0,0.18);
        }

        .profile-card h5 {
            font-weight: 700;
            color: #0f172a;
            margin-bottom: 8px;
        }

        .profile-card p {
            font-size: 14px;
            color: #475569;
        }

    .profile-btn {
        display: inline-block;
        margin-top: 18px;
        padding: 12px 30px;
        border-radius: 30px;
        font-weight: 700;
        color: white;
        text-decoration: none;
        background: linear-gradient(135deg, #6366f1, #22d3ee);
        transition: 0.3s;
    }

        .profile-btn:hover {
            filter: brightness(1.1);
            transform: scale(1.05);
        }
</style>

<div class="profile-wrapper">

    <div class="profile-header">
        <h2>👤 Profil Panelim</h2>
        <p>İlanlarını yönet, yeni ürün ekle ve satışlarını takip et</p>
    </div>

    <div class="profile-cards">

        <div class="profile-card">
            <h5>➕ Yeni İlan Ekle</h5>
            <p>Yeni ürününü hızlıca satışa çıkart</p>
            <a href="/Profile/CreateProduct" class="profile-btn">Yeni İlan</a>
        </div>

        <div class="profile-card">
            <h5>📦 İlanlarım</h5>
            <p>Eklediğin tüm ürünleri görüntüle</p>
            <a href="/Profile/MyProducts" class="profile-btn">İlanlarım</a>
        </div>

    </div>

</div>
