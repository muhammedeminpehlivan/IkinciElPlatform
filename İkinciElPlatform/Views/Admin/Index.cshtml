@{
    ViewData["Title"] = "Admin Panel";
}

<style>
    body {
        background: #f4f6f8 !important;
    }

    .admin-wrapper {
        max-width: 1100px;
        margin: 60px auto;
        padding: 0 15px;
        text-align: center;
    }

    .admin-title {
        font-size: 34px;
        font-weight: 900;
        margin-bottom: 50px;
        color: #0f172a;
    }

    .admin-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 25px;
    }

    .admin-card {
        background: white;
        border-radius: 22px;
        padding: 35px 25px;
        box-shadow: 0 12px 28px rgba(15,23,42,0.12);
        transition: .25s;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .admin-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.18);
    }

    .admin-icon {
        font-size: 42px;
        margin-bottom: 15px;
    }

    .admin-text {
        font-size: 18px;
        font-weight: 700;
        color: #0f172a;
    }
</style>

<div class="admin-wrapper">

    <div class="admin-title">
        👑 Admin Panel
    </div>

    <div class="admin-grid">

        <!-- ✅ KATEGORİ -->
        <a href="/Admin/Categories" class="admin-card">
            <div class="admin-icon">📁</div>
            <div class="admin-text">Kategori Yönetimi</div>
        </a>

        <!-- ✅ İLAN -->
        <a href="/Admin/Products" class="admin-card">
            <div class="admin-icon">📦</div>
            <div class="admin-text">İlan Yönetimi</div>
        </a>

        <!-- ✅ İSTATİSTİK -->
        <a href="/Admin/Statistics" class="admin-card">
            <div class="admin-icon">📊</div>
            <div class="admin-text">İstatistikler</div>
        </a>

    </div>

</div>
    