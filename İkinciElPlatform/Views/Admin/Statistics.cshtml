@{
    ViewData["Title"] = "Admin İstatistik";
}

<style>
    .stat-wrapper {
        max-width: 1100px;
        margin: 50px auto;
        padding: 0 15px;
    }

    .stat-title {
        font-size: 28px;
        font-weight: 800;
        margin-bottom: 30px;
        color: #0f172a;
        text-align: center;
    }

    .stat-box {
        background: white;
        border-radius: 18px;
        padding: 25px;
        text-align: center;
        box-shadow: 0 8px 18px rgba(15,23,42,0.08);
        transition: .25s;
    }

    .stat-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 16px 32px rgba(0,0,0,0.15);
    }

    .stat-value {
        font-size: 26px;
        font-weight: 800;
        margin-top: 10px;
        color: #6366f1;
    }

    .stat-label {
        font-size: 14px;
        color: #64748b;
    }
</style>

<div class="stat-wrapper">
    <h2 class="stat-title">📊 Admin İstatistik Paneli</h2>

    <div class="row">

        <div class="col-md-4 mb-4">
            <div class="stat-box">
                👤
                <div class="stat-value">@ViewBag.TotalUsers</div>
                <div class="stat-label">Toplam Kullanıcı</div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="stat-box">
                📦
                <div class="stat-value">@ViewBag.TotalProducts</div>
                <div class="stat-label">Toplam İlan</div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="stat-box">
                ✅
                <div class="stat-value">@ViewBag.ActiveProducts</div>
                <div class="stat-label">Aktif İlan</div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="stat-box">
                ⛔
                <div class="stat-value">@ViewBag.PassiveProducts</div>
                <div class="stat-label">Pasif İlan</div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="stat-box">
                ❤️
                <div class="stat-value">@ViewBag.TotalFavorites</div>
                <div class="stat-label">Toplam Favori</div>
            </div>
        </div>

        @if (ViewBag.TopProduct != null)
        {
            <div class="col-md-8 mb-4 mx-auto">
                <div class="stat-box">
                    🔥 <b>En Çok Favorilenen Ürün</b>
                    <div class="stat-value">@ViewBag.TopProduct.Title</div>
                    <div class="stat-label">@ViewBag.TopProduct.Price ₺</div>
                </div>
            </div>
        }

    </div>
</div>
